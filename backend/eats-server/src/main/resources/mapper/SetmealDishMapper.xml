<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="top.hazenix.mapper.SetmealDishMapper">
    <insert id="insert">
        insert into setmeal_dish (setmeal_id,dish_id,name,price,copies)
        values (#{setmealId},#{dishId},#{name},#{price},#{copies})
    </insert>
    <insert id="insertBatch">
        insert into setmeal_dish (setmeal_id,dish_id,name,price,copies)
        values
        <foreach collection="list" item="dishDish" separator=",">
            (#{dishDish.setmealId},#{dishDish.dishId},#{dishDish.name},#{dishDish.price},#{dishDish.copies})
        </foreach>
    </insert>
    <delete id="deleteBySetmealIds">
        delete from setmeal_dish where setmeal_id in
                                 <foreach collection="ids" separator="," open="(" close=")" item="id">
                                     #{id}
                                 </foreach>
    </delete>


    <select id="getSetmealCountByDishId" resultType="java.lang.Long">
        select count(*) from setmeal_dish where dish_id = #{id}
    </select>
    <select id="getSetmealDishesBySetmealId" resultType="top.hazenix.entity.SetmealDish">
        select * from setmeal_dish
                 where setmeal_id = #{id}
    </select>
</mapper>
